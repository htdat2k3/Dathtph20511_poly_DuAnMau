<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Mã phiếu: "/>
        <TextView
            android:id="@+id/tv_phieuMuon_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#27837B"
                    android:textSize="18dp"
                    android:text="Thành viên: "/>
                <TextView
                    android:id="@+id/tv_phieuMuon_tenTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#27837B"
                    android:textSize="18dp"
                    android:text="Dang Van A"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sách: "
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_phieuMuon_tenSach"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Java1"/>

                <TextView
                    android:id="@+id/tv_phieuMuon_tinhTrang"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Đã trả sách"
                    android:textColor="#2638D7"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_phieuMuon_Xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Tiền thuê: "/>
        <TextView
            android:id="@+id/tv_phieuMuon_tien"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Ngày thuê: "/>
        <TextView
            android:id="@+id/tv_phieuMuon_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24/10/2022"
            android:textSize="14dp" />
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
</LinearLayout>